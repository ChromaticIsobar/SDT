<c74object name="sdt.inertial">

	<digest>
		[solids] Point-mass inertial object.
	</digest>

	<description>
		<o>sdt.inertial</o> simulates a simple point-mass. Mostly used as exciter for modal resonators.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Stefano Delle Monache, Stefano Baldan, Stefano Papetti</metadata>
		<metadata name="tag">Sound Design Toolkit</metadata>
		<metadata name="tag">Procedural audio</metadata>
		<metadata name="tag">Physics-based sound synthesis</metadata>
		<metadata name="tag">Sonic interaction design</metadata>
		<metadata name="copyright">Â© 2001 - 2021</metadata>
		<metadata name="version">3.0-0.80 (build 04/2021)</metadata>
	</metadatalist>

	<!--MESSAGES-->
	<methodlist>
		<method name="strike" >
			<arglist>
				<arg name="0." optional="0" type="float, list" />
				<arg name="v., strike velocity (m/s)." optional="0" type="float, list" />
			</arglist>
			<digest>
				The strike message (list) resets displacement and velocity to the given values.
			</digest>
			<description>
				The strike message (list) resets displacement and velocity to the given values.
			</description>
		</method>
	</methodlist>

	<!--OUTLETS
	<outletlist>
		<outlet id="0" type="signal">
			<digest>Impact velocity (m/s).</digest>
		</outlet>
	</outletlist> -->

	<!--ARGUMENTS-->
	<objarglist>
		<objarg name="Unique_ID" optional="0" type="symbol, required">
			<digest>Mandatory: Unique identificator name for the point-mass.</digest>
		</objarg>
	</objarglist>

	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="mass" get="1" set="1" type="float" size="1" >
		    <digest>Mass of the inertial object (kg).</digest>
		    <description></description>
	  </attribute>

		<attribute name="fragmentSize" get="1" set="1" type="float" size="1">
		    <digest>Fraction of the whole object [0.0, 1.0]. Used by control algorithms (e.g. <o>sdt.breaking~</o>) to simulate fragmentation.</digest>
		    <description></description>
	  </attribute>
	</attributelist>

	<!--SEEALSO-->
	<seealsolist>
		<seealso name="sdt.modal"/>
		<seealso name="sdt.impact~"/>
		<seealso name="sdt.friction~"/>
		<seealso name="sdt.bouncing~"/>
		<seealso name="sdt.breaking~"/>
		<seealso name="sdt.crumpling~"/>
		<seealso name="sdt.rolling~"/>
		<seealso name="sdt.scraping~"/>
	</seealsolist>

</c74object>
