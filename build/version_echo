#!/usr/bin/env bash

if [ "$#" -lt 1 ]; then
  PLT="LIB";
else
  PLT="$1";
fi
if [ "$#" -lt 2 ]; then
  PREFIX="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )/..";
else
  PREFIX="$2";
fi
PLT="$(echo $PLT | tr a-z A-Z)"

LIB_VERSION_=($(grep "#define SDT_ver " "${PREFIX}/src/SDT/SDTCommon.h"))
LIB_VERSION="${LIB_VERSION_[2]}"

case $PLT in
  "LIB" )
    SDT_VERSION="${LIB_VERSION}";;
  "PD" )
    SDT_VERSION="$(cat Pd/VERSION)-${LIB_VERSION}";;
  "MAX" )
    SDT_VERSION="$(cat MaxPackage/VERSION)-${LIB_VERSION}";;
   * )
    >&2 echo "platform should be either 'LIB', 'PD' or 'MAX', not '${PLT}'" && exit 1;;
esac
SDT_VERSION=${SDT_VERSION//[[:blank:]]/}
echo "${SDT_VERSION}"